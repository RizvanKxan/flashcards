<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:motion="http://schemas.android.com/apk/res-auto"
    app:ignore="NamespaceTypo">


    <Transition
        motion:constraintSetEnd="@+id/pass"
        motion:constraintSetStart="@+id/start"
        motion:duration="300">

        <OnSwipe
            motion:dragDirection="dragLeft"
            motion:onTouchUp="autoComplete"
            motion:touchAnchorId="@id/top_card"
            motion:touchAnchorSide="left"
            motion:touchRegionId="@id/top_card" />
        <KeyFrameSet>

            <KeyPosition
                motion:drawPath="path"
                motion:framePosition="50"
                motion:keyPositionType="pathRelative"
                motion:motionTarget="@id/top_card"
                motion:percentX="0.5"
                motion:percentY="0.1" />

        </KeyFrameSet>
    </Transition>

    <Transition
        motion:constraintSetEnd="@+id/like"
        motion:constraintSetStart="@+id/start"
        motion:duration="300">

        <OnSwipe
            motion:dragDirection="dragRight"
            motion:onTouchUp="autoComplete"
            motion:touchAnchorId="@+id/top_card"
            motion:touchAnchorSide="right"
            motion:touchRegionId="@id/top_card" />
        <KeyFrameSet>

            <KeyPosition
                motion:drawPath="path"
                motion:framePosition="50"
                motion:keyPositionType="pathRelative"
                motion:motionTarget="@id/top_card"
                motion:percentX="0.5"
                motion:percentY="-0.1" />

        </KeyFrameSet>
    </Transition>

    <Transition
        motion:autoTransition="animateToEnd"
        motion:constraintSetEnd="@+id/offScreenLike"
        motion:constraintSetStart="@+id/like"
        motion:duration="500">

    </Transition>

    <Transition
        motion:autoTransition="animateToEnd"
        motion:constraintSetEnd="@+id/offScreenPass"
        motion:constraintSetStart="@+id/pass"
        motion:duration="500">

    </Transition>

    <Transition
        motion:autoTransition="jumpToEnd"
        motion:constraintSetEnd="@+id/start"
        motion:constraintSetStart="@+id/offScreenLike"
        motion:duration="100" />
    <Transition
        motion:autoTransition="jumpToEnd"
        motion:constraintSetEnd="@+id/start"
        motion:constraintSetStart="@+id/offScreenPass"
        motion:duration="100" />

    <ConstraintSet android:id="@+id/start">
        <Constraint android:id="@id/top_card">

            <Layout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="60dp"
                android:layout_marginTop="70dp"
                android:layout_marginEnd="60dp"
                android:layout_marginBottom="70dp"
                />
 />

        </Constraint>

        <Constraint android:id="@id/bottom_card">

            <Layout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="60dp"
                android:layout_marginTop="70dp"
                android:layout_marginEnd="60dp"
                android:layout_marginBottom="70dp" />
            <Transform
                android:scaleX="0.90"
                android:scaleY="0.90" />
        </Constraint>

        <Constraint android:id="@+id/passIcon">

            <Layout
                android:layout_width="40dp"
                android:layout_height="40dp"
                motion:layout_constraintBottom_toBottomOf="parent"
                motion:layout_constraintEnd_toStartOf="parent"
                motion:layout_constraintTop_toTopOf="parent" />

            <Transform
                android:scaleX="0.5"
                android:scaleY="0.5" />

            <PropertySet android:alpha="0" />

        </Constraint>

        <Constraint android:id="@+id/likeIcon">

            <Layout
                android:layout_width="40dp"
                android:layout_height="40dp"
                motion:layout_constraintBottom_toBottomOf="parent"
                motion:layout_constraintStart_toEndOf="parent"
                motion:layout_constraintTop_toTopOf="parent" />

            <Transform
                android:scaleX="0.5"
                android:scaleY="0.5" />

            <PropertySet android:alpha="0" />


        </Constraint>
    </ConstraintSet>

    <ConstraintSet
        android:id="@+id/pass"
        motion:deriveConstraintsFrom="@+id/start">

        <Constraint
            android:id="@id/top_card"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="200dp"
            android:layout_marginBottom="80dp"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintWidth_percent="0.7" />

        <Constraint android:id="@id/bottom_card">
            <Transform
                android:scaleX="0.95"
                android:scaleY="0.95" />

        </Constraint>

        <Constraint android:id="@+id/passIcon">

            <Layout
                android:layout_width="100dp"
                android:layout_height="100dp"
                motion:layout_constraintBottom_toBottomOf="@id/top_card"
                motion:layout_constraintEnd_toEndOf="@id/top_card"
                motion:layout_constraintStart_toStartOf="@id/top_card"
                motion:layout_constraintTop_toTopOf="@id/top_card" />

            <Transform
                android:scaleX="1"
                android:scaleY="1" />

            <PropertySet android:alpha="1" />

        </Constraint>
    </ConstraintSet>

    <ConstraintSet
        android:id="@+id/like"
        motion:deriveConstraintsFrom="@id/start">

        <Constraint
            android:id="@id/top_card"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="200dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="50dp"
            android:layout_marginBottom="80dp"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintWidth_percent="0.7"></Constraint>


        <Constraint android:id="@id/bottom_card">
            <Transform
                android:scaleX="0.95"
                android:scaleY="0.95" />

        </Constraint>
        <Constraint android:id="@+id/likeIcon">

            <Layout
                android:layout_width="100dp"
                android:layout_height="100dp"
                motion:layout_constraintBottom_toBottomOf="@id/top_card"
                motion:layout_constraintEnd_toEndOf="@id/top_card"
                motion:layout_constraintStart_toStartOf="@id/top_card"
                motion:layout_constraintTop_toTopOf="@id/top_card" />

            <Transform
                android:scaleX="1"
                android:scaleY="1" />

            <PropertySet android:alpha="1" />

        </Constraint>
    </ConstraintSet>

    <ConstraintSet
        android:id="@+id/offScreenLike"
        motion:deriveConstraintsFrom="@id/like">

        <Constraint
            android:id="@id/top_card"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="50dp"
            android:layout_marginBottom="80dp"
            motion:layout_constraintStart_toEndOf="parent"
            motion:layout_constraintWidth_percent="0.7" />

        <Constraint android:id="@id/bottom_card">

            <Transform
                android:scaleX="1"
                android:scaleY="1" />

        </Constraint>

    </ConstraintSet>

    <ConstraintSet
        android:id="@+id/offScreenPass"
        motion:deriveConstraintsFrom="@id/pass">

        <Constraint
            android:id="@id/top_card"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="500dp"
            android:layout_marginBottom="80dp"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintWidth_percent="0.7" />

        <Constraint android:id="@id/bottom_card">
            <Transform
                android:scaleX="1"
                android:scaleY="1" />

        </Constraint>
    </ConstraintSet>

</MotionScene>
